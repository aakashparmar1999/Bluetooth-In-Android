<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ble.Bluetooth">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_off"
        android:text="turn on"
        android:id="@+id/btn_on"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/btn_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="turn off"
        android:id="@+id/btn_off"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="discoverable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_off"
        app:layout_constraintEnd_toStartOf="@id/btn_list"
        android:id="@+id/btn_discoverable"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="show list"
        android:id="@+id/btn_list"
        app:layout_constraintStart_toEndOf="@id/btn_discoverable"
        app:layout_constraintTop_toBottomOf="@id/btn_off"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_discoverable"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="show paired devices"
        android:id="@+id/btn_paired"
        />
    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_paired"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/listview_paired"
        android:id="@+id/listview"
        android:layout_margin="10dp"
        />
    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_paired"
        app:layout_constraintStart_toEndOf="@id/listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/listview_paired"
        android:layout_margin="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>